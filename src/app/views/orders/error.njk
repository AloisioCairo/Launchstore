{# Fase 5: NodeJS Avançado > Animações com Lottie e Mensagens pós Pedido #}
{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}

    {% call cards.render('', 'order-error container') %}
        <div class="error-lottie"></div>
        <h2>Dessulpe</h2>
        <p>
            Não podemos processar seu pedido
        </p>

        <a href="#" onclick="history.back()">Tente novamente</a>
        
    {% endcall %}

<script src="/lottie.min.js"></script>
<script>
    const element = document.querySelector('.error-lottie')

    lottie.loadAnimation({
        container: element, // the dom element that will contain the animation
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/56132-error.json' // the path to the animation json
    }).setSpeed(2.5);
</script>

{% endblock content %}