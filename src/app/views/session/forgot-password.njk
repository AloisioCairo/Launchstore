<!-- Fase 4: Controle de sessão do usuário > Login logout > Form de login de usuário -->
{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}
    
    {% call card.render('Esqueceu a senha?', 'password container form') %}
        <form method="POST" action="/users/forgot-password">

            <div class="fields">
                <div class="item">
                    <div>E-mail</div>
                    <div class="input">
                        <input 
                            type="email" 
                            name="email"
                            placeholder="Digite o e-mail cadastrado"
                            value="{{ user.email }}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            </div>

            <button class="button" type="submit">Recuperar a senha</button>

        </form>
    {% endcall %}
    
    
{% endblock content %}
